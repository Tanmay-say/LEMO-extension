{
  "manifest_version": 3,
  "name": "Lemo AI Assistant",
  "version": "2.0",
  "description": "Modern AI chatbot with product comparison and wallet integration",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' wss://*.appsync-realtime-api.eu-west-1.amazonaws.com https://*.infura.io https://api.calibration.node.glif.io"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.jsx-r6Cd2v4G.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end",
      "css": [
        "assets/index-Cy1_w6V8.css"
      ]
    }
  ],
  "action": {
    "default_title": "Toggle Lemo AI Assistant"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "resources": [
        "src/content/*",
        "logo.png",
        "assets/index.jsx-r6Cd2v4G.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
